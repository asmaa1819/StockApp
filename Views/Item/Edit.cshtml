@model ItemViewModel

@{
    ViewData["Title"] = "Edit";
}

<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Edit Item
</h5>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StoreId"></label>
        <select asp-for="StoreId" asp-items="new SelectList(Model.Stores, nameof(Store.StoreId), nameof(Store.Name))" class="form-control">
            <option value="">Select a store</option>
        </select>
        <span asp-validation-for="StoreId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary mt-4" />
    </div>
</form>

<a asp-action="Index">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

