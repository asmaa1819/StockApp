@model ItemViewModel

@{
    ViewData["Title"] = "Add Item";
}

<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add a new Item
</h5>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="StoreId"></label>
        <select asp-for="StoreId" asp-items="new SelectList(Model.Stores, nameof(StoreViewModel.StoreId), nameof(StoreViewModel.Name))" class="form-control">
            <option value="">Select a store</option>
        </select>
        <span asp-validation-for="StoreId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary mt-4" />
    </div>
</form>

<a asp-action="Index">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
